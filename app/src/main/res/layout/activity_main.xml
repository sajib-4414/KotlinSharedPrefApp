<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        >
    <include layout="@layout/toolbar" />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">
        <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_register_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_new_account"
                android:textColor="@android:color/background_light"
                android:background="@drawable/custom_navy_button"
                android:padding="@dimen/common_overall_margin"
                android:textSize="@dimen/medium_text_size"
                android:layout_marginBottom="@dimen/common_overall_margin"
                android:textAllCaps="false"/>
        <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_registered_candidates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/see_registered_candidates_list"
                android:textAllCaps="false"
                android:textSize="@dimen/medium_text_size"
                android:padding="@dimen/common_overall_margin"
                android:textColor="@android:color/background_light"
                android:background="@drawable/custom_green_button"/>
    </LinearLayout>

</RelativeLayout>